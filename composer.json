{
    "name": "amentian/laravel-bridge",
    "type": "flarum-extension",
    "version": "v0.1.0",
    "description": "Bridge between laravel and flarum.",
    "keywords": ["flarum", "laravel", "sync"],
    "license": "MIT",
    "authors": [
        {
            "name": "Amentian",
            "email": "amentian@gmail.com"
        }
    ],
    "require": {
        "flarum/core": "^0.1.0-beta.3"
    },
    "autoload": {
        "psr-4": {
            "Amentian\\Bridge\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Laravel Bridge",
            "icon": {
                "backgroundColor": "#fff",
                "image": "icon.png",
                "backgroundSize": "cover",
                "backgroundPosition": "center"
            }
        }
    }
}
